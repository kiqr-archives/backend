<section id="backend-<%= backend.model_name.pluralize %>" class="bg-white rounded-lg shadow-xl">
  <header class="flex items-center h-16 border-b border-slate-200 px-8 md:px-5">
    <h1 class="font-bold text-lg"><%= backend.model_name.pluralize %></h1>
    <%= link_to "Add new", new_resource_path, class: "ml-auto button-header" %>
  </header>
  <table id="index">
    <thead>
      <tr>
        <th class="id-column">#</th>
        <% backend.index_columns.each do |column| %>
          <th class="text-left"><%= column.title %></th>
        <% end %>
        <th class="text-center w-16">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @resources.each do |resource| %>
        <tr>
          <td class="id-column"><%= resource.id %></td>
          <% backend.index_columns.each do |column| %>
            <td><%= resource.send(column.name) %></td>
          <% end %>
          <td>
            <div class="action-buttons">
              <%= link_to "Edit", edit_resource_path(resource) %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
<%== pagy_nav(@pagy) %>
